// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  EDITOR
  AUTHOR
  USER
}

enum Status {
  DRAFT
  REVIEW
  PUBLISHED
  ARCHIVED
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String?
  name          String?
  role          Role      @default(USER)
  provider      String    @default("local")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  posts         Post[]
  projects      Project[]
  stories       Story[]
}

model Post {
  id                 String   @id @default(uuid())
  slug               String   @unique
  title              String
  content            Json
  status             Status   @default(DRAFT)
  language           String   @default("en")
  translationGroupId String?
  author             User     @relation(fields: [authorId], references: [id])
  authorId           String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@index([translationGroupId])
}

model Project {
  id                 String   @id @default(uuid())
  slug               String   @unique
  title              String
  description        String?
  content            Json
  status             Status   @default(DRAFT)
  language           String   @default("en")
  translationGroupId String?
  author             User     @relation(fields: [authorId], references: [id])
  authorId           String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@index([translationGroupId])
}

model Story {
  id                 String   @id @default(uuid())
  slug               String   @unique
  title              String
  content            Json
  status             Status   @default(DRAFT)
  language           String   @default("en")
  translationGroupId String?
  author             User     @relation(fields: [authorId], references: [id])
  authorId           String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@index([translationGroupId])
}

model Media {
  id        String   @id @default(uuid())
  filename  String
  url       String
  mimetype  String
  size      Int
  createdAt DateTime @default(now())
}